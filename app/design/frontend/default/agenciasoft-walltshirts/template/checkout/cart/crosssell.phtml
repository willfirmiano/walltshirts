<?php
/**
 * Cart cross sell items template
 *
 * @see Mage_Checkout_Block_Cart_Crosssell
 */
?>
<div class="soft-carrinho-anuncio">
<?php if($this->getItemCount()): ?>
    <h2><?php echo $this->__('Based on your selection, you may be interested in the following items:') ?></h2>
	<div class="category-products">
    	<ul class="products-grid">
        <?php $p=0; ?>
		<?php foreach ($this->getItems() as $_item): ?>
        <?php $p++; ?>
            <li class="item <?php if($p == 3){ echo 'last';} ?>">
                <a class="product-image" href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_item->getName()) ?>">
                	<img src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->resize(200,300); ?>" width="200" height="300" alt="<?php echo $this->htmlEscape($_item->getName()) ?>" />
                </a>
                <h2 class="product-name">
                	<a href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->htmlEscape($_item->getName()) ?></a>
                </h2>
                <?php echo $this->getPriceHtml($_item, true) ?>
                <div class="actions">
               <button class="button btn-cart" type="button" title="<?php echo $this->__('Add to Cart') ?>" class="button btn-cart" onclick="setLocation('<?php echo $this->getAddToCartUrl($_item) ?>')"><span><span><?php echo $this->__('Add to Cart') ?></span></span></button> 
               </div>  
            </li>

    <?php endforeach; ?>
</ul>
</div>
    <script type="text/javascript">decorateList('crosssell-products-list', 'none-recursive')</script>

<?php endif; ?>
<div class="clear"></div>
</div>
