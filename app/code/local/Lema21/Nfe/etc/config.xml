<?xml version="1.0"?>
<config>
	<modules>
		<Lema21_Nfe>
			<version>0.1.3</version>
		</Lema21_Nfe>
	</modules>
	<global>
		<resources>
			<nfe_setup>
				<setup>
					<module>Lema21_Nfe</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</nfe_setup>
			<nfe_write>
				<connection>
					<use>core_write</use>
				</connection>
			</nfe_write>
			<nfe_read>
				<connection>
					<use>core_read</use>
				</connection>
			</nfe_read>
			<nfe_setup>
			  <setup>
                    <module>Lema21_Nfe</module>
                    <class>Mage_Sales_Model_Mysql4_Setup</class>
               </setup>
            </nfe_setup>
		</resources>
		<helpers>
			<nfe>
				<class>Lema21_Nfe_Helper</class>
			</nfe>
		</helpers>
		<models>
			<nfe>
				<class>Lema21_Nfe_Model</class>                
			</nfe>
		</models>
		<blocks>
			<nfe>
				<class>Lema21_Nfe_Block</class>
			</nfe>
			<adminhtml> 
				<rewrite> 
					<sales_order_view>Lema21_Nfe_Block_Adminhtml_Sales_Order_View</sales_order_view>
				</rewrite>
				<rewrite>
                	<sales_order_grid>Lema21_Nfe_Block_Adminhtml_Sales_Order_Grid</sales_order_grid>
            	</rewrite>
            	
            	<events>
			        <core_block_abstract_prepare_layout_before>
			            <observers>
			                <nfe_core_block_abstract_prepare_layout_before>
			                    <class>nfe/observer</class>
			                    <method>addMassAction</method>
			                </nfe_core_block_abstract_prepare_layout_before>
			            </observers>
			        </core_block_abstract_prepare_layout_before>
			    </events>
     
			</adminhtml>
		</blocks>
	</global>
	<admin>
		<routers>
			<nfe>
				<use>admin</use>
				<args>
					<module>Lema21_Nfe</module>
					<frontName>nfe</frontName>
				</args>
			</nfe>
		</routers>
	</admin>
	<adminhtml>
		<layout>
			<updates>
				<nfe>
					<file>nfe.xml</file>
				</nfe>
			</updates>
		</layout>
	</adminhtml>
</config>
